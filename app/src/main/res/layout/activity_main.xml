<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#504D4D"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvsub"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="15dp"
        android:layout_weight="1"
        android:gravity="bottom|end"
        android:textColor="#7A7878"
        android:textSize="26dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvans"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="15dp"
        android:layout_weight="2"
        android:gravity="bottom|end"
        android:textColor="@color/white"
        android:textSize="36dp"
        android:textStyle="bold" />

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <Button
            android:id="@+id/bac"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="2"
            android:backgroundTint="#3A3A3A"
            android:text="AC"
            android:textSize="@dimen/btnsize"
            android:textStyle="bold"
            app:cornerRadius="100dp" />

        <Button
            android:id="@+id/bper"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:backgroundTint="#FF9800"
            android:text="%"
            android:textSize="@dimen/btnsize"
            android:textStyle="bold"
            app:cornerRadius="100dp" />

        <Button
            android:id="@+id/bdiv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:backgroundTint="#FF9800"
            android:text="/"
            android:textSize="@dimen/btnsize"
            android:textStyle="bold"
            app:cornerRadius="100dp" />

    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <Button
            android:id="@+id/b7"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:backgroundTint="#1C1B1B"
            android:text="7"
            android:textSize="@dimen/btnsize"
            android:textStyle="bold"
            app:cornerRadius="100dp" />

        <Button
            android:id="@+id/b8"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:backgroundTint="#1C1B1B"
            android:text="8"
            android:textSize="@dimen/btnsize"
            android:textStyle="bold"
            app:cornerRadius="100dp" />

        <Button
            android:id="@+id/b9"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:backgroundTint="#1C1B1B"
            android:text="9"
            android:textSize="@dimen/btnsize"
            android:textStyle="bold"
            app:cornerRadius="100dp" />

        <Button
            android:id="@+id/bmulti"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:backgroundTint="#FF9800"
            android:text="*"
            android:textSize="@dimen/btnsize"
            android:textStyle="bold"
            app:cornerRadius="100dp" />

    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <Button
            android:id="@+id/b4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:backgroundTint="#1C1B1B"
            android:text="4"
            android:textSize="@dimen/btnsize"
            android:textStyle="bold"
            app:cornerRadius="100dp" />

        <Button
            android:id="@+id/b5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:backgroundTint="#1C1B1B"
            android:text="5"
            android:textSize="@dimen/btnsize"
            android:textStyle="bold"
            app:cornerRadius="100dp" />

        <Button
            android:id="@+id/b6"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:backgroundTint="#1C1B1B"
            android:text="6"
            android:textSize="@dimen/btnsize"
            android:textStyle="bold"
            app:cornerRadius="100dp" />

        <Button
            android:id="@+id/bmin"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:backgroundTint="#FF9800"
            android:text="-"
            android:textSize="@dimen/btnsize"
            android:textStyle="bold"
            app:cornerRadius="100dp" />

    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <Button
            android:id="@+id/b1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:backgroundTint="#1C1B1B"
            android:text="1"
            android:textSize="@dimen/btnsize"
            android:textStyle="bold"
            app:cornerRadius="100dp" />

        <Button
            android:id="@+id/b2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:backgroundTint="#1C1B1B"
            android:text="2"
            android:textSize="@dimen/btnsize"
            android:textStyle="bold"
            app:cornerRadius="100dp" />

        <Button
            android:id="@+id/b3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:backgroundTint="#1C1B1B"
            android:text="3"
            android:textSize="@dimen/btnsize"
            android:textStyle="bold"
            app:cornerRadius="100dp" />

        <Button
            android:id="@+id/bplus"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:backgroundTint="#FF9800"
            android:text="+"
            android:textSize="@dimen/btnsize"
            android:textStyle="bold"
            app:cornerRadius="100dp" />

    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <Button
            android:id="@+id/bdzero"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:backgroundTint="#1C1B1B"
            android:text="00"
            android:textSize="@dimen/btnsize"
            android:textStyle="bold"
            app:cornerRadius="100dp" />

        <Button
            android:id="@+id/bzero"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:backgroundTint="#1C1B1B"
            android:text="0"
            android:textSize="@dimen/btnsize"
            android:textStyle="bold"
            app:cornerRadius="100dp" />

        <Button
            android:id="@+id/bpoint"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:backgroundTint="#1C1B1B"
            android:text="."
            android:textSize="@dimen/btnsize"
            android:textStyle="bold"
            app:cornerRadius="100dp" />

        <Button
            android:id="@+id/bans"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:backgroundTint="#FF9800"
            android:text="="
            android:textSize="@dimen/btnsize"
            android:textStyle="bold"
            app:cornerRadius="100dp" />

    </LinearLayout>

</LinearLayout>